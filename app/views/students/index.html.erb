<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Highschool</th>
      <th>Belong</th>
      <th>Lecture</th>
      <th>Message</th>
      <th>Circle comment</th>
      <th>Remark comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.image_id %></td>
        <td><%= student.name %></td>
        <td><%= student.birthday %></td>
        <td><%= student.highschool %></td>
        <td><%= student.belong %></td>
        <td><%= student.lecture %></td>
        <td><%= student.message %></td>
        <td><%= student.circle_comment %></td>
        <td><%= student.remark_comment %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

